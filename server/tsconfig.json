{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",  // Ensure the output directory is set to "dist"
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["api/**/*.ts"],  // Include TypeScript files in the api directory
  "exclude": ["node_modules", "dist"]
}
