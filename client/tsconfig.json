{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite/client", "vitest/globals", "vitest", "node", "@testing-library/jest-dom"]
  },
  "include": ["src", "src/**/*", "src/types", "**/*.spec.ts", "**/*.d.ts"]
}
